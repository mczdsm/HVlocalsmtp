# .env.example - Configuration for SMTP PDF Receiver

# -- Application Settings --
# LOGGING_MODE: 'DEBUG' or 'PRODUCTION'.
# - DEBUG: Verbose console logging.
# - PRODUCTION: Separates audit and error logs into files.
LOGGING_MODE=DEBUG

# TEST_MODE: 'true' or 'false'.
# - true: Enables automatic sending of test emails to the server.
TEST_MODE=false

# -- SMTP Server Settings --
SMTP_HOST=0.0.0.0
SMTP_PORT=1025

# -- File and Storage Settings --
# Base directory for storing scanned PDFs
SCANS_BASE_PATH=/srv/scans/users
# Maximum PDF file size in megabytes
MAX_FILE_SIZE_MB=50
# Directory for log files in production mode
LOG_PATH=/var/log/smtp-receiver

# -- Samba Settings (for production.sh) --
# The username for the Samba share
SAMBA_USER=winuser
# The password for the Samba share.
# IMPORTANT: Change this to a strong, unique password in your .env file for production.
SAMBA_PASSWORD=CHANGE_THIS_PASSWORD
